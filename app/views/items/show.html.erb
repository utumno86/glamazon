<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<% unless @item.image.blank?  %>
		<p>
			<strong>Image:</strong>
			<p><%= image_tag(@item.image.url) %></p>

		</p>
<%end  %>

<p>
  <strong>Price:</strong>
  <%= @item.price %>
</p>

<p>
	 <%=link_to 'Add to Cart', update_cart_path(@item), class: "btn btn-small btn-danger"  %>
</p>

<%= link_to 'Back', items_path, class: "btn btn-small btn-primary" %>
